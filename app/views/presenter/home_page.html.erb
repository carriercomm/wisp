
<div class="container">
  <div class="row">
    <p class="well">You can edit this page in app/views/presenter/home_page.html.erb</p>

	<form class="form-inline" role="form">
        <div class="row">
            <div class="col-xs-6">
                <label>Please enter your location: </label>
                <div class="input-group">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Province <span class="caret"></span></button>
                        <%= select_tag "City", options_from_collection_for_select(City.all, "id", "name"), class: "form-control" %>
                        <ul class="dropdown-menu">
                            <li><a href="#">wasd</a></li>
                            <li><a href="#">wasadwadsawd action</a></li>
                            
                        </ul>
                    </div>
                    <input type="text" class="form-control" placeholder="City">
                </div>
            </div>
        </div>
    </form>
    <div id="isp_list">
    </div>	

    <%- @countries.each do |country| -%>
      <h2><%= country.name %></h2>
      <ul>
      <%- country.provinces.each do |province| -%>
        <li><%= province.name %></li>
        <ul>
        <%- province.cities.each do |city| -%>
          <li>
            <b><%= city.name %></b> - speed test results:
          </li>
        <%- end -%>
        </ul>
      <% end %>
      </ul>
    <% end %>
  </div>
</div>  